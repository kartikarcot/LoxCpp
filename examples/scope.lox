// This is a comment and won't be evaluated
var hello_world="Hello World!";
{
    var hello_scoped_world="Hello Scoped World!";
    print(hello_scoped_world);
}
print(hello_world);

var PI=3.14159;
var radius=10;
var area=PI*radius*radius;
print(area);
{
    var radius=5;
    var area=PI*radius*radius;
    print(area);
}

var a = "outer";
{
    print(a);
    var a = "inner";
    print(a);
}

var a = "global";
{
  fun showA() {
    print(a);
  }

  showA();
  var a = "block";
  showA();
}
